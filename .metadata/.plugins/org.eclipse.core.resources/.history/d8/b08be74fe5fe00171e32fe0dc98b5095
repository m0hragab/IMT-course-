#include"Dio.h"
#include "Macros.h"
#include "Std_Types.h"
#include "util/delay.h"
#include "LCD.h"
#include<avr/delay.h>
#include"Key_Pad_Driver.h"

s16 U8KEY_PAD(void)
{

	s16 arr[4][4]={{'1','2','3','+'},{'4','5','6','-'},{'7','8','9','x'},{'=','0','#','/'}};
	u8 R , C;
	u8 x =0;
	while(1)
	{

		for(R=0;R<=3;R++)
		{
			clearbit(PORTB,R);
			for(C=4;C<8;C++)
			{
				if(Dio_u8GetPinValue(Dio_PORTB,C)==0)
				{
					x= arr[R][C-4];
					while(Dio_u8GetPinValue(Dio_PORTB,C)==0)
					;
				_delay_ms(10);
				}

			}
			setbit(PORTB,R);

		}

    }
	return x;
}
