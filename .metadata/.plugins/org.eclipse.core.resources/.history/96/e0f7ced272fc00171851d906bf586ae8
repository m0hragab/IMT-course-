#include"Dio.h"
#include "Macros.h"
#include "Std_Types.h"
#include <util/delay.h>
#include "LCD.h"

int main(void)
{
	u8 arr[4][4]={{'1','2','3','+'},{'4','5','6','-'},{'7','8','9','x'},{'*','0','#','/'}};
	u8 R , C;

	Dio_vidSetPortDirection(Dio_PORTA,0b11111111);
	Dio_vidSetPortDirection(Dio_PORTD,0b11111111);
	DDRB=0x0f;
	PORTB=0xff;
	Lcd_vidInit();

	while(1)
	{

		for(R=0;R<=3;R++)
		{
			clearbit(PORTB,R);
			for(C=4;C<8;C++)
			{
				if(getbit(PINB,C)==0)
				{

					_delay_ms(120);
					 Lcd_vidWriteCharctr(arr[R][C-4]);
					_delay_ms(120);
					if(Lcd_vidWriteCharctr(arr[3][2]))
					{
					Lcd_vidSendCommand(clear_display);
					}
				}

			}
			setbit(PORTB,R);
		}
		//_delay_ms(50);
		//Lcd_vidSendCommand(clear_display);
	}
	return 0;
}

