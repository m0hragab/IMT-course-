#include"Dio.h"
#include "Macros.h"
#include "Std_Types.h"
#include <util/delay.h>
#include "LCD.h"

int main(void)
{

	u8 R , C;
	Dio_vidSetPortDirection(Dio_PORTA,0b11111111);
	Dio_vidSetPortDirection(Dio_PORTD,0b11111111);

	Lcd_vidInit();
	_delay_ms(100);
	Dio_vidSetPortDirection(Dio_PORTB,0b00001111);
    Lcd_vidSendCommand(clear_display);
while(1)
{
   u32 arr[4][4]={{'1','2','3','+'},{'4','5','6','-'},{'7','8','9','x'},{'*','0','#','/'}};

	for(R=0;R<=3;R++)
	{
		clearbit(PORTB,R);
		for(C=0;C<=3;C++)
		{
			if(getbit(PINB,C)==0)
			{
            Lcd_vidWriteCharctr(arr[R][C]);
            _delay_ms(120);
			}

		}
		setbit(PORTB,R);
	}
    //_delay_ms(50);
	//Lcd_vidSendCommand(clear_display);
}
return 0;
}

